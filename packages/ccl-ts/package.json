{
	"name": "ccl-ts",
	"version": "0.1.0",
	"description": "TypeScript CCL (Categorical Configuration Language) parser.",
	"homepage": "https://github.com/tylerbutler/tools-monorepo/tree/main/packages/ccl-ts",
	"bugs": "https://github.com/tylerbutler/tools-monorepo/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylerbutler/tools-monorepo.git",
		"directory": "packages/ccl-ts"
	},
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./esm/index.d.ts",
				"default": "./esm/index.js"
			}
		}
	},
	"types": "./esm/index.d.ts",
	"files": [
		"esm"
	],
	"scripts": {
		"build:api": "api-extractor run --local",
		"build:compile": "tsc --project ./tsconfig.json",
		"check": "pnpm check:format",
		"check:format": "biome format .",
		"clean": "rimraf esm _temp *.tsbuildinfo",
		"format": "biome check . --linter-enabled=false --write",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write --unsafe",
		"release:license": "generate-license-file -c ../../.generatelicensefile.cjs",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"true-myth": "^9.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@microsoft/api-extractor": "^7.55.1",
		"@tylerbu/ccl-test-data": "workspace:^",
		"@types/node": "^20.19.25",
		"@vitest/coverage-v8": "^3.2.4",
		"ccl-test-runner-ts": "workspace:^",
		"pathe": "^2.0.3",
		"rimraf": "^6.1.2",
		"typescript": "~5.9.3",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"nx": {
		"targets": {
			"build": {
				"executor": "nx:noop"
			},
			"ci": {}
		}
	}
}

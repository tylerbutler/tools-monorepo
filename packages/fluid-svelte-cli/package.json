{
	"name": "@tylerbu/fluid-svelte-cli",
	"version": "0.0.1",
	"description": "Useful tools for building Svelte apps using the Fluid Framework.",
	"keywords": ["fluidframework", "svelte"],
	"bugs": "https://github.com/tylerbutler/tools-monorepo/issues",
	"repository": "tylerbutler/tylerbu-cli",
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"exports": {
		".": {
			"types": "./esm/index.d.ts",
			"import": "./esm/index.js"
		}
	},
	"types": "./esm/index.d.ts",
	"bin": {
		"fluid-svelte": "./bin/run.js"
	},
	"files": [
		"/CHANGELOG.md",
		"/esm",
		"!/esm/commands",
		"!/esm/testConfig.*",
		"/THIRD-PARTY-LICENSES.txt"
	],
	"scripts": {
		"api": "api-extractor run --local",
		"api:markdown": "api-documenter markdown -i _temp/api-extractor -o _temp/docs",
		"build": "fluid-build . --task build",
		"check": "npm run check:format",
		"check:format": "biome format .",
		"clean": "concurrently npm:clean:build npm:clean:manifest",
		"clean:build": "rimraf esm _temp *.tsbuildinfo *.done.build.log",
		"clean:manifest": "rimraf oclif.manifest.json",
		"compile": "tsc --project ./tsconfig.json",
		"format": "biome check . --linter-enabled=false --write",
		"full": "fluid-build . --task full",
		"generate": "concurrently npm:generate:*",
		"generate:license-file": "generate-license-file -c ../../.generatelicensefile.cjs",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"postpack": "npm run clean:manifest",
		"readme": "concurrently npm:readme:*",
		"readme:main": "oclif readme --no-aliases",
		"test:coverage": "vitest run test --coverage",
		"test:disabled": "npm run test:vitest",
		"test:vitest": "vitest run test"
	},
	"oclif": {
		"bin": "fluid-svelte",
		"commands": "./esm/commands",
		"dirname": "fluid-svelte"
	},
	"dependencies": {
		"@oclif/core": "^4.2.7",
		"@tylerbu/cli-api": "workspace:^",
		"@tylerbu/fluid-svelte": "workspace:^",
		"ts-morph": "^25.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@microsoft/api-documenter": "^7.26.17",
		"@microsoft/api-extractor": "^7.52.1",
		"@oclif/test": "^4.1.10",
		"@types/node": "^20.12.7",
		"@types/semver": "^7.5.8",
		"@vitest/coverage-v8": "^3.0.5",
		"concurrently": "^9.1.2",
		"generate-license-file": "^3.7.0",
		"oclif": "^4.17.30",
		"rimraf": "^6.0.1",
		"typescript": "~5.5.4",
		"vitest": "^3.0.5"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}

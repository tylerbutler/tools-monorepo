{
	"name": "@tylerbu/ccl-test-viewer",
	"version": "0.1.0",
	"private": true,
	"description": "CCL Test Suite Viewer - Interactive test result visualization",
	"keywords": [
		"ccl",
		"test",
		"viewer",
		"sveltekit"
	],
	"homepage": "https://github.com/tylerbutler/tools-monorepo/tree/main/packages/ccl-test-viewer#readme",
	"bugs": "https://github.com/tylerbutler/tools-monorepo/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylerbutler/tools-monorepo.git",
		"directory": "packages/ccl-test-viewer"
	},
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"scripts": {
		"build:tauri": "BUILD_TARGET=tauri pnpm build:vite && tauri build",
		"build:vite": "vite build",
		"bundlemon": "bundlemon",
		"check": "pnpm check:svelte && pnpm check:format",
		"check:format": "biome check . --linter-enabled=false",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"clean": "rimraf build .svelte-kit dist",
		"dev": "vite dev",
		"dev:tauri": "BUILD_TARGET=tauri tauri dev",
		"format": "biome check . --linter-enabled=false --write",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"perf:bundle": "pnpm build && open .sonda/index.html",
		"perf:lighthouse": "pnpm build && lhci autorun",
		"preview": "vite preview",
		"release:license": "generate-license-file -c ../../.generatelicensefile.cjs",
		"sync-data": "tsx scripts/sync-data.ts",
		"sync-svelte-kit": "svelte-kit sync",
		"tauri": "tauri",
		"tauri:build": "tauri build",
		"tauri:build:debug": "tauri build --debug",
		"tauri:dev": "tauri dev",
		"test": "vitest run",
		"test:all": "pnpm test && pnpm test:e2e",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"test:ui": "vitest --ui",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@andypf/json-viewer": "^2.2.0",
		"@lucide/svelte": "^0.562.0",
		"@tauri-apps/api": "^2.9.0",
		"@tauri-apps/plugin-dialog": "^2.6.0",
		"@tauri-apps/plugin-fs": "^2.4.4",
		"@tylerbu/ccl-test-data": "workspace:^",
		"chart.js": "^4.5.1",
		"clsx": "^2.1.1",
		"prismjs": "^1.30.0",
		"svelte-inspect-value": "^0.10.0",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@biomejs/js-api": "^4.0.0",
		"@biomejs/wasm-nodejs": "^2.3.8",
		"@internationalized/date": "^3.10.0",
		"@lhci/cli": "^0.15.1",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-netlify": "^5.2.4",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@types/node": "^20.19.25",
		"@types/prismjs": "^1.26.5",
		"@vitest/coverage-v8": "^4.0.17",
		"@vitest/ui": "^4.0.16",
		"base16-tailwind": "github:donovanglover/base16-tailwind",
		"bits-ui": "^2.15.4",
		"bundlemon": "^3.1.0",
		"happy-dom": "^20.3.1",
		"jsdom": "^27.4.0",
		"msw": "^2.12.3",
		"playwright": "^1.57.0",
		"sonda": "^0.10.0",
		"sort-package-json": "*",
		"svelte": "^5.47.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"typescript": "~5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.17"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"nx": {
		"targets": {
			"build": {
				"dependsOn": [
					"^build",
					"sync-data",
					"sync-svelte-kit",
					"build:vite"
				]
			},
			"build:vite": {
				"outputs": [
					"{projectRoot}/build/**",
					"{projectRoot}/dist/**",
					"{projectRoot}/.svelte-kit/**"
				]
			},
			"bundlemon": {
				"dependsOn": [
					"build"
				],
				"inputs": [
					"default",
					"{projectRoot}/build/**"
				],
				"cache": false
			},
			"ci": {}
		}
	}
}

{
	"name": "@tylerbu/ccl-test-viewer",
	"version": "0.1.0",
	"description": "CCL Test Suite Viewer - Interactive test result visualization",
	"keywords": [
		"ccl",
		"test",
		"viewer",
		"sveltekit"
	],
	"homepage": "https://github.com/tylerbutler/tools-monorepo/tree/main/packages/ccl-test-viewer#readme",
	"bugs": "https://github.com/tylerbutler/tools-monorepo/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylerbutler/tools-monorepo.git",
		"directory": "packages/ccl-test-viewer"
	},
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"scripts": {
		"b": "turbo build",
		"build": "npm run sync-data && vite build",
		"check": "npm run check:svelte && npm run check:format",
		"check:format": "biome check . --linter-enabled=false",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"clean": "rimraf build .svelte-kit",
		"dev": "vite dev",
		"format": "biome check . --linter-enabled=false --write",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"sync-data": "tsx scripts/sync-data.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:all": "npm run test && npm run test:e2e",
		"perf:bundle": "npm run build && open .sonda/index.html",
		"perf:lighthouse": "npm run build && lhci autorun",
		"perf:stats": "node scripts/bundle-stats.js",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"tauri:build:debug": "tauri build --debug",
		"build:tauri": "BUILD_TARGET=tauri npm run build && tauri build",
		"dev:tauri": "BUILD_TARGET=tauri tauri dev"
	},
	"dependencies": {
		"@andypf/json-viewer": "^2.2.0",
		"@lucide/svelte": "^0.515.0",
		"@tauri-apps/api": "^2.8.0",
		"@tauri-apps/plugin-dialog": "^2.4.0",
		"@tauri-apps/plugin-fs": "^2.4.2",
		"chart.js": "^4.5.0",
		"clsx": "^2.1.1",
		"prismjs": "^1.30.0",
		"svelte-inspect-value": "^0.9.2",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.4",
		"@internationalized/date": "^3.9.0",
		"@lhci/cli": "^0.13.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-netlify": "^5.2.3",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.42.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/vite": "^4.1.13",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^20.19.19",
		"@types/prismjs": "^1.26.5",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"base16-tailwind": "github:donovanglover/base16-tailwind",
		"bits-ui": "^2.11.0",
		"jsdom": "^25.0.1",
		"playwright": "^1.55.0",
		"sonda": "^0.9.0",
		"sort-package-json": "*",
		"svelte": "^5.39.3",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.13",
		"tslib": "^2.8.1",
		"tsx": "^4.20.6",
		"typescript": "~5.5.4",
		"vite": "^6.3.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}

{
	"name": "@tylerbu/sail-infrastructure",
	"version": "0.1.0",
	"description": "Sail build infrastructure",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./lib/index.d.ts",
				"default": "./lib/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"main": "lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"/lib",
		"!lib/test"
	],
	"scripts": {
		"build": "tsc --project ./tsconfig.json",
		"clean": "rimraf --glob dist lib \"**/*.tsbuildinfo\" \"**/*.build.log\" nyc _api-extractor-temp",
		"check:biome": "biome check .",
		"check:format": "npm run check:biome",
		"format": "npm run format:biome",
		"format:biome": "biome check --write .",
		"test": "npm run test:mocha",
		"test:coverage": "c8 npm run test",
		"test:mocha": "mocha --recursive lib/test"
	},
	"dependencies": {
		"@manypkg/get-packages": "^2.2.2",
		"@oclif/core": "^4.0.30",
		"cosmiconfig": "^8.3.6",
		"detect-indent": "^6.1.0",
		"execa": "^5.1.1",
		"fs-extra": "^11.2.0",
		"micromatch": "^4.0.8",
		"oclif": "^4.15.16",
		"package-manager-detector": "^0.2.8",
		"picocolors": "^1.1.1",
		"read-pkg-up": "^7.0.1",
		"resolve-workspace-root": "^2.0.0",
		"semver": "^7.7.1",
		"simple-git": "^3.27.0",
		"sort-package-json": "1.57.0",
		"tinyglobby": "^0.2.10",
		"type-fest": "^4.33.0",
		"typescript": "~5.4.5"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.9.3",
		"@fluid-tools/api-markdown-documenter": "^0.17.1",
		"@fluidframework/build-common": "^2.0.3",
		"@fluidframework/build-tools-bin": "npm:@fluidframework/build-tools@~0.49.0",
		"@fluidframework/eslint-config-fluid": "^6.1.0",
		"@microsoft/api-extractor": "^7.52.11",
		"@types/chai": "^5.2.1",
		"@types/chai-arrays": "^2.0.3",
		"@types/fs-extra": "^11.0.4",
		"@types/micromatch": "^4.0.9",
		"@types/mocha": "^10.0.9",
		"@types/node": "^22.8.0",
		"@types/semver": "^7.7.0",
		"c8": "^10.1.3",
		"chai": "^5.2.1",
		"chai-arrays": "^2.2.0",
		"concurrently": "^8.2.2",
		"copyfiles": "^2.4.1",
		"eslint": "~8.57.0",
		"eslint-plugin-chai-friendly": "~1.0.1",
		"memfs": "^4.14.0",
		"mocha": "^10.7.3",
		"rimraf": "^4.4.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.26.10",
		"typedoc-plugin-markdown": "^4.2.9"
	},
	"fluidBuild": {
		"tasks": {
			"build": {
				"dependsOn": [],
				"script": true
			},
			"test": {
				"dependsOn": ["build"],
				"script": true
			},
			"test:coverage": {
				"dependsOn": ["build"],
				"script": true
			}
		}
	}
}

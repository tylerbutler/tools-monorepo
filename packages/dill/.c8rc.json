{
	"all": true,
	"include": ["esm/**", "src/**"],
	"cache-dir": "_temp/.c8-cache",
	"temp-directory": "_temp/.c8-temp",
	"report-dir": ".coverage/c8",
	"reporter": ["cobertura", "text", "text-summary"],
	"exclude": [
		"**/{test,tests}/**",
		"**/**.{test,tests}.{js,jsx,ts,tsx}",
		"**/*test_index.js",
		"esm/.cache/*",
		"dist/main.js"
	]
}

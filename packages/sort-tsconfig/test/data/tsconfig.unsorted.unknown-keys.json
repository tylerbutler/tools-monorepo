{
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"],
	// Compiler options below.
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,

		// Composite projects are a way to split a project into smaller pieces that can be built together.
		"composite": true,
		"module": "Node16",
		"moduleResolution": "Node16", // This is a comment to the right.
		"outDir": "built",
		"rootDir": "src",
		"strict": true,
		"target": "es2019",
		"esModuleInterop": true,
	},
	"unknownKey2": "value2",
	"ts-node": {
		"esm": true,
	},
	"foo": "foo",
	"bar": "bar",
	"unknownKey1": "value1",
}

{
	"name": "@tylerbu/cli-api",
	"version": "0.3.0",
	"description": "Base classes and other API helpers for oclif-based CLI projects.",
	"homepage": "https://github.com/tylerbutler/tylerbu-cli",
	"bugs": "https://github.com/tylerbutler/tylerbu-cli/issues",
	"repository": "tylerbutler/tylerbu-cli",
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./esm/index.d.ts",
				"default": "./esm/index.js"
			}
		}
	},
	"types": "./esm/index.d.ts",
	"files": ["esm"],
	"scripts": {
		"build": "fluid-build . --task build",
		"check": "npm run check:format",
		"check:format": "biome format .",
		"clean": "rimraf esm *.tsbuildinfo *.done.build.log",
		"compile": "tsc --project ./tsconfig.json",
		"docs": "api-extractor run --local",
		"format": "sort-package-json && biome check . --linter-enabled=false --apply",
		"full": "fluid-build . --task full",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --apply",
		"sort-package-json": "sort-package-json",
		"test": "vitest run \"test\""
	},
	"dependencies": {
		"@oclif/core": "^3.26.6",
		"chalk": "^5.3.0",
		"debug": "^4.3.4",
		"detect-indent": "^7.0.1",
		"simple-git": "^3.24.0",
		"sort-jsonc": "^1.0.1",
		"strip-ansi": "^7.1.0",
		"tiny-jsonc": "^1.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@microsoft/api-extractor": "^7.43.4",
		"@oclif/test": "^3.2.15",
		"@types/chai": "^4.3.16",
		"@types/debug": "^4.1.12",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.7",
		"@types/semver": "^7.5.8",
		"chai": "^4.4.1",
		"concurrently": "^8.2.2",
		"fs-extra": "^11.2.0",
		"mocha": "^10.4.0",
		"oclif": "^4.10.10",
		"rimraf": "^5.0.7",
		"sort-package-json": "2.10.0",
		"tmp-promise": "^3.0.3",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"type-fest": "^4.18.2",
		"typescript": "~5.4.5",
		"vitest": "^1.6.0"
	},
	"packageManager": "pnpm@9.0.4+sha256.caa915eaae9d9aefccf50ee8aeda25a2f8684d8f9d5c6e367eaf176d97c1f89e",
	"engines": {
		"node": ">=18.0.0"
	}
}

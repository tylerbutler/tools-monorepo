{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"overrides": [
		{
			"includes": ["**/src/commands/**/*.ts"],
			"linter": {
				"rules": {
					"style": {
						// oclif commands are required to use default exports.
						"noDefaultExport": "off",
					},
					"performance": {
						// oclif commands can re-export from other packages.
						"noBarrelFile": "off",
					},
				},
			},
		},
	],
}

{
	"$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
	"overrides": [
		{
			// Test files
			"includes": ["**/*.mochatest.*", "**/*.vitest.*", "**/*.test.ts"],
			"linter": {
				"rules": {
					"performance": { "useTopLevelRegex": "off" },
					"suspicious": {
						// Console logging is ok in tests.
						"noConsole": "off",
					},
				},
			},
		},
	],
}

{
	"$schema": "../node_modules/@biomejs/biome/configuration_schema.json",
	"overrides": [
		{
			// Test files and helpers
			"includes": [
				"**/*.mochatest.*",
				"**/*.vitest.*",
				"**/*.test.ts",
				"**/test/**/*.ts",
			],
			"linter": {
				"rules": {
					"performance": {
						// inline reggexes are useful in test assertions/expectations.
						"useTopLevelRegex": "off",
					},
					"style": {
						// Allow default exports in test files.
						"noDefaultExport": "off",
						// Test helpers and builders don't need explicit public modifiers
						"useConsistentMemberAccessibility": "off",
					},
					"suspicious": {
						// Console logging is ok in tests.
						"noConsole": "off",
						"useAwait": "off",
						// Empty blocks in mock/stub objects are intentional
						"noEmptyBlockStatements": "off",
					},
				},
			},
		},
	],
}
